<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="nav">
    <%= link_to image_tag("arrow.png", width: '30'), root_path %>
    <p class="center">LOGIN</p>
    <p><%= f.submit "Log In", class: 'submit' %></p>
  </div>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email', class:'input' %>
  <%= f.password_field :password, autocomplete: "current-password", placeholder:'Password', class:'input input-bottom' %>
<% end %>
<%= link_to "Forgot password ?", new_password_path(resource_name), class:'forgot-btn' %>
